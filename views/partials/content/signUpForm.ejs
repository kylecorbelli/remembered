<form name="signUpForm" ng-submit="signUp()" novalidate>
    <div class="form-group">
        <label>First Name</label>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <input class="form-control" type="text" ng-model="newUser.firstName" required />
        </div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-at"></i></span>
            <input class="form-control" type="email" ng-model="newUser.email" required />
        </div>
    </div>
    <div class="form-group">
        <label>Create a Password</label>
        <p><em>(must be 4 - 20 characters)</em></p>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-key"></i></span>
            <input class="form-control" type="password" ng-model="newUser.password" required />
        </div>
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-key"></i></span>
            <input class="form-control" type="password" ng-model="newUser.passwordConf" required />
        </div>
    </div>
    <div class="form-group" ng-show="signUpError">
        <p class="error">{{ signUpError }}</p>
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-block" type="submit" ng-disabled="signUpForm.$invalid">Sign Up</button>
    </div>
</form>
<form name="loginForm" ng-hide="forgotPasswordFlag" ng-submit="login()" novalidate>
    <div class="form-group">
        <label>Email</label>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-at"></i></span>
            <input class="form-control" type="text" name="email" ng-model="loginInfo.email" required />
        </div>
    </div><!-- div.form-group -->
    <div class="form-group">
        <label>Password</label>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-key"></i></span>
            <input class="form-control" type="password" name="password" ng-model="loginInfo.password" required />
        </div>
    </div><!-- div.form-group -->
    <div class="form-group" ng-show="loginError">
        <p class="error">{{ loginError }}</p>
    </div>
    <div class="form-group">
        <a href="" ng-click="forgotPassword()">Forgot your password?</a>
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-block" type="submit" ng-disabled="loginForm.$invalid">Login</button>
    </div><!-- div.form-group -->
</form>

<form name="forgotPasswordForm" ng-show="forgotPasswordFlag" ng-submit="emailPassword()" novalidate>
    <div class="form-group">
        <label>Enter your email and we'll send you a temporary password</label>
        <input class="form-control" type="email" ng-model="forgotPasswordEmail" required />
    </div>
    <div class="form-group" ng-show="forgotPassError || forgotPassSuccess">
        <p class="error" ng-show="forgotPassError">{{ forgotPassError }}</p>
        <p class="success" ng-show="forgotPassSuccess">{{ forgotPassSuccess }}</p>
    </div>
    <div class="form-group">
        <a href="" ng-click="rememberedPassword()">Remembered password?</a>
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-block" type="submit" ng-disabled="forgotPasswordForm.$invalid">Send Password</button>
    </div>
</form>